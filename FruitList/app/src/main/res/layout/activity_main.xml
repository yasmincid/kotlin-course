<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_width="376dp"
            android:layout_height="641dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/zarzamora"
                    android:id="@+id/btnZamora" android:contentDescription="@string/description"
                    android:background="#4CAF50" android:onClick="selection"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/melon"
                    android:id="@+id/btnSandia" android:contentDescription="@string/description"
                    android:background="#2CF37E59" android:onClick="selection"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/sandia"
                    android:id="@+id/btnMelon" android:contentDescription="@string/description"
                    android:background="#4CAF50" android:onClick="selection"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/manzanas"
                    android:id="@+id/btnManzana" android:background="#12FD0B2F"
                    android:contentDescription="@string/description" android:onClick="selection"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/pina"
                    android:id="@+id/btnPina" android:contentDescription="@string/description"
                    android:background="#4CAF50" android:onClick="selection"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/pera" android:id="@+id/btnPera"
                    android:background="#194CAF50" android:contentDescription="@string/description"
                    android:onClick="selection"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/frambuesas"
                    android:id="@+id/btnGros" android:contentDescription="@string/description"
                    android:background="#4CAF50" android:onClick="selection"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/mangos"
                    android:id="@+id/btnMango" android:background="#0DF44336"
                    android:contentDescription="@string/description" android:onClick="selection"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/kiwis"
                    android:id="@+id/btnKiwi" android:background="#4CAF50"
                    android:contentDescription="@string/description" android:onClick="selection"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/fresas"
                    android:id="@+id/btnFresa" android:contentDescription="@string/description"
                    android:background="#14F5276E" android:onClick="selection"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/cerezas"
                    android:id="@+id/btnMoras" android:background="#4CAF50"
                    android:contentDescription="@string/description" android:onClick="selection"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/bananas"
                    android:id="@+id/btnBananas" android:contentDescription="@string/description"
                    android:background="#0ACDDC39" android:onClick="selection"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>